{
  "compilerOptions": {
    "lib": [
      "ESNext",
      "DOM"
    ],
    "target": "ES6",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": true,
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "outDir": "./dist", // Directory for compiled JS files
    "rootDir": "./src" // Directory with your TypeScript files
  },
  "include": [
    "src/*/*.ts"
  ]
}